{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "core-js",
      "jasmine",
      "node",
      "protractor"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}